@model order_form
<h1>Custom Jewelry Order Form</h1>
<form asp-action="SubmitOrder" method="post">
    <label for="ProductName">Select Jewelry</label>
    <select id="ProductName" asp-for="ProductName">
        @foreach (var product in ViewBag.Products)
        {
            <option value="@product.ProductName">@product.ProductName</option>
        }
    </select>

    <label for="HardwareType">Hardware Type</label>
    <select id="HardwareType" asp-for="HardwareType">
        <option>Gold</option>
        <option>Silver</option>
        <option>Rose Gold</option>
    </select>

    <label for="FocalColor">Focal Color</label>
    <input type="text" asp-for="FocalColor" />

    <label for="Length">Length (inches)</label>
    <input type="text" asp-for="Length" />

    <label for="CustomerName">Your Name</label>
    <input type="text" asp-for="CustomerName" />

    <label for="CustomerEmail">Your Email</label>
    <input type="email" asp-for="CustomerEmail" />

    <label for="AdditionalNotes">Additional Notes</label>
    <textarea asp-for="AdditionalNotes"></textarea>

    <button type="submit">Submit Order</button>
</form>
