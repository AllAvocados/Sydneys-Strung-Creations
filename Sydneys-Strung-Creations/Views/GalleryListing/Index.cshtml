@* Define Model *@
@model IEnumerable<gallary_listing>

@* Define View *@
@{
    ViewData["Title"] = "Gallery of All Jewlery";
}

@* Write Code *@
<div class="row">
    <div class="col-md-8 offset-md-3">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.JewleryPicturePath)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductDescription)</th>
                    <th>@Html.DisplayNameFor(model => model.JewleryCategory)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class = "align-middle">
                            <img class="rounded-circle"
                                 src="@Url.Content(item.JewleryPicturePath)"
                                 alt="@item.ProductName" 
                            style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductDescription)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.JewleryCategory)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.JewleryCategory)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
